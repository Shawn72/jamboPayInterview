
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Account_Layout.cshtml";
}

<div class="container">
    <div id="vendor-login">
        <div class="account-box">
            <div class="account-wrapper">
                <div class="account-logo">
                    <a href="#"><img src="/images/logo.png" /></a>
                </div>

                <p class="login-box-msg">Login to Ambassador Account</p>
                <span id="loginMsg" style="display: none"></span><br />

                <form role="form" method="post" id="vendor_login" accept-charset="UTF-8">
                    <div class="form-group form-focus">
                        <label for="vendor_email" class="control-label">Email</label>

                        <input type="email" value="" name="vendor[email]" id="vendor_email" class="form-control" size="100" />
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group form-focus">
                        <label for="vendor_password" class="control-label">Password</label>

                        <input type="password" value="" name="vendor_password" id="vendor_password" class="form-control" size="16" />
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>

                    <div class="form-group form-focus">
                        <input type="submit" value="Sign In" id="btnLogin" style="border-radius: 4px; text-transform: uppercase !important; color: white; background-color: #367fa9; border: none" class="btn btn-primary btn-block account-btn" />
                        <!-- /.col -->
                    </div>
                </form>

                <div class="text-center">
                    <p>- OR -</p>
                </div>


                <a href="#" onclick="showRecoverPasswordForm();return false;">Reset your password?</a>&nbsp;
                <a href="/Home/Register_User" class="text-center">Create Ambassador Account</a>

                <div class="clearfix form-group">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4 gifLoading" id="gifLoading30" style="display: none">
                        <img src="~/assets/loaders/load.gif" width="100" height="100" />
                    </div>
                    <div class="col-sm-4"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recover Password Form -->
    <div id="recover-password" style='display:none' class="customer customer__recover">
        <div class="account-box">
            <div class="account-wrapper">
                <div class="account-logo">
                    <a href="#"><img src="/images/logo.png" /></a>
                </div>

                <p class="login-box-msg"><strong>Reset Your Password</strong></p>
                <span id="passMsg" style="display: none"></span><br />
                <form role="form" method="post" accept-charset="UTF-8">
                    <div id="recover_email" class="clearfix form-horizontal">
                        <div class="form-group form-focus">
                            <label for="txtemail" class="control-label">Email</label>
                            <input type="email" value="" name="txtemail" id="txtemail" class="form-control" size="50" />
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                        <div class="form-group form-focus">
                            <input type="submit" value="Reset Password" id="btnResetPass" style="border-radius: 4px; text-transform: uppercase !important; color: white; background-color: #367fa9; border: none" class="btn btn-primary btn-block account-btn" />
                        </div>
                    </div>
                </form>

                <div class="text-center">
                    <p>- OR -</p>
                    <p><a href="#" class="text-center" onclick="hideRecoverPasswordForm();return false;">Back to Login</a></p>
                </div>

                <div class="clearfix form-group">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4 gifLoading" id="gifLoading" style="display: none">
                        <img src="~/assets/loaders/load.gif" width="100" height="100" />
                    </div>
                    <div class="col-sm-4"></div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.login-box-body -->

<script type="text/javascript">
    const showRecoverPasswordForm = () => {
        document.getElementById('recover-password').style.display = 'block';
        document.getElementById('vendor-login').style.display = 'none';
    }

    const hideRecoverPasswordForm = () => {
        document.getElementById('recover-password').style.display = 'none';
        document.getElementById('vendor-login').style.display = 'block';
    }

    if (window.location.hash == '#recover') { showRecoverPasswordForm() }
</script>

